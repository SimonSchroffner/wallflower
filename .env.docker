# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Database
DB_PASSWORD=wallflower_secret_change_this

# Backend CORS - Update with your domain/IP
# For local network access, use your IP address
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://192.168.1.83:5173,http://192.168.1.83:5174

# Frontend URLs - Update with your domain/IP
# For local development:
VITE_BACKEND_URL=ws://localhost:3001
VITE_MOBILE_URL=http://localhost:5174

# For network access (replace with your IP):
# VITE_BACKEND_URL=ws://192.168.1.83:3001
# VITE_MOBILE_URL=http://192.168.1.83:5174

# Garden Configuration
MAX_FLOWERS=10000
PLACEMENT_MIN_DISTANCE=30
