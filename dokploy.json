{
  "name": "wallflower",
  "description": "Interactive Virtual Garden - Art Installation",
  "type": "docker-compose",
  "config": {
    "composeFile": "docker-compose.dokploy.yml",
    "buildContext": "."
  },
  "services": {
    "db": {
      "type": "database",
      "persistent": true,
      "healthCheck": true
    },
    "backend": {
      "type": "api",
      "port": 3001,
      "healthCheck": "/health",
      "dependencies": ["db"]
    },
    "display": {
      "type": "web",
      "port": 3000,
      "domains": ["wallflower.wasmachen.jetzt"]
    },
    "mobile": {
      "type": "web",
      "port": 3000,
      "domains": ["plant.wasmachen.jetzt"]
    }
  },
  "env": {
    "required": [
      "DB_PASSWORD",
      "CORS_ORIGIN",
      "VITE_BACKEND_URL",
      "VITE_MOBILE_URL"
    ]
  }
}
